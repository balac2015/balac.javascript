extends ../layouts/front
block header
    // iCheck
    link(rel='stylesheet', href='/plugins/iCheck/square/blue.css')
block main
    .register-box
        .register-logo
            a(href='/vendor')
                b U净-修改密码
        .register-box-body
            p.login-box-msg
            form#registerForm(action='/api/changeForgetPass', method='post')
                input(type='hidden', name='_csrf', value=_csrf)
                input(type='hidden', name='email', value="#{email}")
                .form-group.has-feedback
                    label(for="password") 密码:
                        span.required *
                    input#password.form-control(type='password',name="password" placeholder='密码')
                    span.glyphicon.glyphicon-user.form-control-feedback

                .form-group.has-feedback
                    label(for="password1") 确认新密码:
                        span.required *
                    input#password1.form-control(type='password',name="password1" placeholder='重复密码')
                    span.glyphicon.glyphicon-user.form-control-feedback

                .form-group.has-feedback
                    button.btn.btn-primary.btn-block.btn-flat(type='submit') 修改
                    // /.col
            p
                i.fa.fa-info
                a.text-center(href='/vendor/login') &nbsp; &nbsp;我已经注册过账户，直接登录
        // /.form-box
    // /.register-box
block scripts
    script.
        $(function () {
            $("#registerForm").validate({
                rules: {
                    password: {
                        required: true,
                        minlength:6
                    },
                    password1: {
                        required: true,
                        minlength:6,
                        equalTo: "#password"
                    }
                }
            });
        });
