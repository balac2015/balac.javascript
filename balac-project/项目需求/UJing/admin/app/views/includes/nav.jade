// Main Header
header.main-header
  // Logo
  a.logo(href='/')
    // mini logo for sidebar mini 50x50 pixels
    span.logo-mini
      b 云
      | 洗衣
    // logo for regular state and mobile devices
    span.logo-lg
      b U净
      | 云洗衣
  // Header Navbar
  nav.navbar.navbar-static-top(role='navigation')
    // Sidebar toggle button
    a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
      span.sr-only Toggle navigation
    // Navbar Right Menu
    .navbar-custom-menu
      ul.nav.navbar-nav
        // Messages: style can be found in dropdown.less
        li.dropdown.messages-menu
          // Menu toggle button
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            i.fa.fa-envelope-o
            span.label.label-success 4
          ul.dropdown-menu
            li.header You have 4 messages
            li
              // inner menu: contains the messages
              ul.menu
                - for(var i = 0;i<5;i++)
                  li
                    // start message
                    a(href='#')
                      .pull-left
                        // User Image
                        img.img-circle(src='/dist/img/user2-160x160.jpg', alt='User Image')
                      // Message title and timestamp
                      h4
                        Support Team
                        small
                          i.fa.fa-clock-o 5 mins
                      // The message
                      p Why not buy a new awesome theme?
                  // end message
              // /.menu
            li.footer
              a(href='#') See All Messages
        // User Account Menu
        - if (req.isAuthenticated())
          li.dropdown.user.user-menu
            // Menu Toggle Button
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              // The user image in the navbar
              - if(req.user)
                img.user-image(src="#{req.user.photo_profile ? req.user.photo_profile:'/dist/img/avatar.png'}", alt="头像")
              // hidden-xs hides the username on small devices so only the image appears.
              span.hidden-xs &nbsp;#{req.user.username}
              b.caret
            ul.dropdown-menu
              // The user image in the menu
              li.user-header
                img.img-circle(src="#{req.user.photo_profile ? req.user.photo_profile:'/dist/img/avatar.png'}", alt="头像")
                p #{req.user.username}
              // Menu Body
              //li.user-body
                .row
                  .col-xs-4.text-center
                    a(href='#') Followers

                  .col-xs-4.text-center
                    a(href='#') Sales

                  .col-xs-4.text-center
                    a(href='#') Friends
                // /.row
              // Menu Footer
              li.user-footer
                .pull-left
                  a.btn.btn-default.btn-flat(href='/#{req.user.username}') 个人资料

                .pull-right
                  a.btn.btn-default.btn-flat(href='/logout') 退出