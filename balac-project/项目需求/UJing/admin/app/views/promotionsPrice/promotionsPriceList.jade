block header
  link( rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css")

//应用的page title
block pageTitle
  h1 促销信息
    small 添加，删除，更新促销信息
block main
  .box
    .box-header.with-border
      h3.box-title 促销信息
      .box-tools.pull-right
        a.btn.btn-box-tool.btn-default(href="/basicSet/promotion/add")
          i.fa.fa-plus
          span  添加促销价
        //button.btn.btn-box-tool(data-widget="collapse")
        //  i.fa.fa-minus
    .box-body
      table#promotionsList.table.table-bordered.table-hover.table-striped
        thead
          //th.text-right(width="40") #
